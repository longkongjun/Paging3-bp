<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_spacing"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageAvatar"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/md_theme_onSurface"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageAvatar"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintWidth_default="wrap"
            android:layout_marginStart="16dp"
            tools:text="Rick Sanchez" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_status_badge"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAllCaps="true"
            android:textColor="@color/md_theme_onPrimary"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toBottomOf="@id/textName"
            tools:text="ALIVE" />

        <TextView
            android:id="@+id/textMeta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/md_theme_secondary"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toBottomOf="@id/textStatus"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Human · Male" />

        <TextView
            android:id="@+id/textOrigin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/md_theme_onSurface"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toBottomOf="@id/textMeta"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="起源：地球" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/md_theme_onSurface"
            app:layout_constraintStart_toEndOf="@id/imageAvatar"
            app:layout_constraintTop_toBottomOf="@id/textOrigin"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="位置：Citadel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
